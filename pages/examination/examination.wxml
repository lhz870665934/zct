<!--pages/examination/examination.wxml-->
<view class="page_container">
  <button class="back" wx:if="{{ back_show }}"bindtap="back">返回上题</button>
  <view class="question_container" wx:for="{{ question_list }}" catchtouchmove="donothing">
    <view>{{index + 1}}、{{item.question}}</view>
    <radio-group data-index="{{index}}" bindchange="bindchange">
      <view class="radio_container" wx:for="{{answer_list[index]}}">
        <radio value="{{index}}" checked="{{item.checked}}"></radio>
        <view>{{item.name}}</view>
      </view>
    </radio-group>
  </view>
  <button class="submit" type="primary" bindtap="countpoints">提交</button>
</view>

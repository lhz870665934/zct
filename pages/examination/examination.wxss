/* pages/examination/examination.wxss */
page{
  height: 100%;
  width: 100%;
}

.page_container {
  width: 100%;
  height: 100%;
}

.question_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  overflow: auto;
  align-items: stretch;
}

.question_each {
  display: flex;
  flex-direction: column;
  justify-content: center;

  flex: 0 0 100%;
}

.radio_group {
  display: flex;
  flex-direction: column;
}

.back {
  position: fixed;
  top: 0%;
}

.submit {
  position: fixed;
  width: 100%;
  bottom: 0%;
}

.radio_container {
  display: flex;
  flex-direction: row;
}

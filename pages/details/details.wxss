/* pages/details/details.wxss */
page {
  background-color: #F8F8F8;
  height: 100%;
  width: 100%;
}

.details_part1 {
  background-color: #FFFFFF;
  padding-top: 5%;
  padding-bottom: 3%;
}

.product_name_container {
  display: flex;
  justify-content: center;
}

.product_name {
  font-size: 16px;
  font-weight: Regular;
  color: #787878;
}

.product_info_container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  margin-top: 10%;
  margin-bottom: 10%;
}

.product_info_earning {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text1 {
  font-size: 32px;
  font-weight: Medium;
  color: #D0021B;
}

.text2 {
  font-size: 32px;
  font-weight: Medium;
  color: #363636;
}

.product_info_benefit {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text3 {
  font-size: 16px;
  font-weight: Regular;
  color: #787878;
}

.divLine_container {
  display: flex;
  justify-content: center;
}

.divLine {
  background: #CCCCCC;
  height: 1px; 
  width: 90%;
}

.prop_container {
  margin-top: 3%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.prop_block {
  width: 33%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.orange_square {
  height: 6px;
  width: 6px;
  background-color: rgba(248,99,59,1);
  margin-right: 10%;
}

.blue_square {
  height: 6px;
  width: 6px;
  background-color: rgba(59,148,248,1);
  margin-right: 10%;
}

.text4 {
  font-size: 14px;
  font-weight: Regular;
  color: #787878;
}

.details_part2 {
  background-color: #FFFFFF;
  margin-top: 3%;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.chart-container {
  width: 375px;
  height: 285px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
  height: 100%;
  background-color: #F8F8F8;
}

.weui-navbar {
  background-color: #FFFFFF;
}

.product-container {
  background-color: #FFFFFF;
  margin-top: 5%;
  padding: 4%;
}

.text1 {
  font-size: 16px;
  font-weight: regular;
  color: #363636;
}

.amount-container {
  background-color: #FFFFFF;
  margin-top: 5%;
  padding: 4%;
}

.amount-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.text2 {
  font-size: 14px;

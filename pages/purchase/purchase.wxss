}

.text_warn {
  font-size: 14px;
  font-weight: Regular;
  color: #EF3E44;
}

.input {
  margin-left: 2%;
}

.inputUnderline {
  background: #CCCCCC;
  height: 1px;
  width: 100%;
  margin-bottom: 2%;
}

.text4 {
  font-size: 14px;
  font-weight: Regular;
  color: #787878;
}

.paymentStyle-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #FFFFFF;
  margin-top: 5%;
  padding-left: 4%;
  padding-top: 4%;
  padding-bottom: 4%;
}

.text5 {
  font-size: 16px;
  font-weight: Regular;
  color: #363636;
}

.text-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  height: 80%;
}

.text6 {
  font-size: 14px;
  font-weight: Medium;
  color: #363636;

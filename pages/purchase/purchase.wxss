  height: 80%;
}

.arrow-icon {
  width: 9px;
  height: 17px;
}

.investStyle-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #FFFFFF;
  margin-top: 5%;
  padding-left: 4%;
  padding-top: 4%;
  padding-bottom: 4%;
}

.investStyle-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

